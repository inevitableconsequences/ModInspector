<Page x:Class="ModInspector.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ModInspector"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage"
      Background="AliceBlue">


    <Page.Resources>
        <Style x:Key="mainTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Cascadia Code"/>
            <Setter Property="FontSize" Value="22"/>
        </Style>
    </Page.Resources>

    <Grid>

        <Image
            x:Name="img"
            Source="img.jpg"
            Stretch="UniformToFill"/>

        <TextBlock
            Text="This a main page of mod inspector"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Style="{DynamicResource mainTextStyle}"/>

        <TextBlock
            Text="Mods browser tab still under development"
            Style="{DynamicResource mainTextStyle}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="25"/>

    </Grid>
</Page>
