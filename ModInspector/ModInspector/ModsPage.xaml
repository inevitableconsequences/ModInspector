<Page x:Class="ModInspector.ModsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ModInspector"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ModsPage"
      Background="AliceBlue">


    <Page.Resources>

        <Style x:Key="buttonStyle" TargetType="Button">
            
            <Style.Setters>
                <Setter Property="Background" Value="LightGray"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="FontFamily" Value="Cascadia Mono"/>
                <Setter Property="FontSize" Value="25"/>
                <Setter Property="Height" Value="100"/>
            </Style.Setters>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="CadetBlue"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="BlueViolet"/>
                </Trigger>
            </Style.Triggers>
            
        </Style>
        
    </Page.Resources>
    
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <ListBox
            x:Name="modsListBox"
            Background="WhiteSmoke"
            Foreground="Black"
            SelectionMode="Multiple"
            Margin="0,20,0,0"
            FontFamily="Cascadia Code"
            FontSize="20"/>

        <StackPanel Grid.Column="1">
            
            <Button
                x:Name="btnRefreshListOfMods"
                Content="Refresh"
                Click="btnRefreshListOfMods_Click"
                Style="{DynamicResource buttonStyle}"/>

            <Button
                x:Name="btnSelectFolder"
                Content="Folder"
                Click="btnSelectFolder_Click"
                Style="{DynamicResource buttonStyle}"/>

            <Button
                x:Name="btnSwitchState"
                Content="Switch"
                Foreground="Red"
                Click="btnSwitchState_Click"
                Style="{DynamicResource buttonStyle}"/>

            <Button
                x:Name="btnSelectAll"
                Content="Select all"
                Click="btnSelectAll_Click"
                Style="{DynamicResource buttonStyle}"/>
            
        </StackPanel>

        <TextBox
            x:Name="tbSearchMod"
            Grid.Column="0"
            VerticalAlignment="Top"
            Height="20"
            TextChanged="tbSearchMod_TextChanged"
            />

    </Grid>
</Page>
